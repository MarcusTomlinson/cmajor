{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (Debug)",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": [
                "cp .vscode/_settings.json .vscode/settings.json &&",
                "mkdir -p build/debug &&",
                "cd build/debug &&",
                "cmake -GNinja -DBUILD_PLUGIN=OFF -DCMAKE_BUILD_TYPE=Debug -DCMAKE_OSX_ARCHITECTURES=\"arm64;x86_64\" ../.. &&",
                "cmake --build . -j8 --config Debug"
            ],
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/build/debug"
                ]
            }
        },
        {
            "label": "Build (Release)",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": [
                "cp .vscode/_settings.json .vscode/settings.json &&",
                "mkdir -p build/release &&",
                "cd build/release &&",
                "cmake -GNinja -DBUILD_PLUGIN=OFF -DCMAKE_BUILD_TYPE=Release -DCMAKE_OSX_ARCHITECTURES=\"arm64;x86_64\" ../.. &&",
                "cmake --build . -j8 --config Release"
            ],
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/build/release"
                ]
            }
        }
    ]
}
